<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:padding="@dimen/dimen_huge">

    <ImageView
        android:id="@+id/bd_lv_item_nav_header_portrait_iv"
        android:layout_width="@dimen/img_huge_ex"
        android:layout_height="@dimen/img_huge_ex"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/dimen_huge"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bd_lv_item_nav_header_title_tv"
            style="@style/DetailTextViewStyle"
            android:layout_gravity="left"
            android:singleLine="true"
            android:textSize="@dimen/text_huge"/>

        <TextView
            android:id="@+id/bd_lv_item_nav_header_subtitle_tv"
            style="@style/DetailTextViewStyle"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/dimen_normal"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/gray"/>
    </LinearLayout>
</LinearLayout>