<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <FrameLayout
            android:id="@+id/bd_tb_item_badge_icon_container_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_micro"
            android:paddingRight="@dimen/dimen_micro">

            <ImageView
                android:id="@+id/bd_tb_item_badge_icon_iv"
                android:layout_width="@dimen/img_big"
                android:layout_height="@dimen/img_big"
                android:layout_gravity="center"
                android:src="@drawable/bd_ic_home"/>

        </FrameLayout>

        <TextView
            android:id="@+id/bd_tb_item_badge_num_tv"
            style="@style/BadgeNumStyle"
            android:layout_width="@dimen/dimen_huge"
            android:layout_height="@dimen/dimen_huge"
            android:layout_alignRight="@id/bd_tb_item_badge_icon_container_fl"
            android:text="99"
            android:textSize="@dimen/text_mini"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/bd_tb_item_badge_dot_iv"
            style="@style/BadgeDotStyle"
            android:layout_alignRight="@id/bd_tb_item_badge_icon_container_fl"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/bd_tb_item_badge_desc_tv"
        style="@style/DetailTextViewStyle"
        android:maxEms="4"
        android:singleLine="true"
        android:text="描述"
        android:textSize="@dimen/text_micro"/>

</LinearLayout>