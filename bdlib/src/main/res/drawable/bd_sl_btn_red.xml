<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_micro"/>
            <solid android:color="@color/WhiteSmoke"/>
            <stroke android:width="1px" android:color="@color/colorDarkerGray"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_micro"/>
            <solid android:color="@color/holo_red_light"/>
            <stroke android:width="1px" android:color="@color/colorDarkerGray"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_micro"/>
            <solid android:color="@color/holo_red_dark"/>
            <stroke android:width="1px" android:color="@color/colorDarkerGray"/>
        </shape>
    </item>

</selector>